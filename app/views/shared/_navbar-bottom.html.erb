<div class="navbar-bottom">
  <%= link_to locations_path, class: "bottom-item bottom-link", style: "text-align: center" do %>
    <i class='fas fa-home'></i>
  <% end %>
  <%= link_to checkins_all_path, class: "bottom-item bottom-link", style: "text-align: center" do %>
    <i class="fas fa-users"></i>
  <% end %>
  <%= link_to checkins_new_path, class: "bottom-item bottom-link", style: "text-align: center" do %>
    <i class="fas fa-map-marker"></i>
  <% end %>
  <%= link_to conversations_path, class: "bottom-item bottom-link", style: "text-align: center" do %>
    <i class="fas fa-comments"></i>
  <% end %>
