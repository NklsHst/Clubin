<div class="navbar-filter">
  <%= link_to "#", class: "filter-item-1 filter-link", style: "text-align: center" do %>
  <i class="fas fa-user-friends"></i> Friends only
  <% end %>
  <%= link_to "#", class: "filter-item-1 filter-link", id: "no-border", style: "text-align: center" do %>
  <i class="fas fa-users"></i> All check-ins
  <% end %>
</div>

<div class="page-content">
<h2>Recent Check-ins</h2>

<div class="container">
  <% @checkins.each do |checkin| %>
  <div class="row">
    <%= link_to profile_path do %>
    <div class="col-xs-2">
      <div class="user-profile" style="margin-top: 15px;">
        <img src="<%= image_path 'profile_3.jpg' %>" class="avatar">
      </div>
    </div>
    <div class="col-xs-8" class="no-purple">
      <h5><%= link_to checkin.user.user_name, profile_path, style: "color: #606470" %></h5>
      <h5><span style="font-weight: normal;">Checked in @ </span><%= link_to checkin.location.name, location_path(checkin.location), style: "color: #606470"%></h5>
    </div>
    <div class="col-xs-2">
      <div class="checkin-time">
       <h6> <%= checkin.created_at.strftime("%I:%M") %></h6>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
</div>
