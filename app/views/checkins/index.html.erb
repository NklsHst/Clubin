<div class="page-content">
  <div class="container">
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane fade in active" id="friends">
        <% @friends_checkins.reverse.each do |checkin| %>
        <div class="row">
          <%= link_to profile_path(checkin.user) do %>
          <div class="col-xs-2">
            <div class="user-profile" style="margin-top: 15px;">
             <% begin %>
             <img src="<%= cl_image_path checkin.user.picture, width: 40, height: 40, crop: :fill, secure: true %>" class="avatar">
             <% rescue ArgumentError %>
             <img src="<%= image_path "https://images-na.ssl-images-amazon.com/images/I/81tISKde7HL._SY355_.jpg", width: 40, height: 40, crop: :fill %>" class="avatar">
             <% end %>
           </div>
         </div>
         <div class="col-xs-8" class="no-purple">
          <h5><%= link_to checkin.user.user_name, profile_path(checkin.user), style: "color: #606470" %></h5>
          <h5><span style="font-weight: normal;">Checked in @ </span><%= link_to checkin.location.name, location_path(checkin.location), style: "color: #606470"%></h5>
        </div>
        <div class="col-xs-2">
          <div class="checkin-time">
           <h6> <%= checkin.created_at.strftime("%I:%M") %></h6>
         </div>
       </div>
       <% end %>
     </div>
     <% end %>
   </div>
   <div role="tabpanel" class="tab-pane fade" id="all">
    <% @all_checkins.reverse.each do |checkin| %>
    <div class="row">
      <%= link_to profile_path(checkin.user) do %>
      <div class="col-xs-2">
        <div class="user-profile" style="margin-top: 15px;">
          <% begin %>
          <img src="<%= cl_image_path checkin.user.picture, width: 40, height: 40, crop: :fill, secure: true %>" class="avatar">
          <% rescue ArgumentError %>
          <img src="<%= image_path "https://images-na.ssl-images-amazon.com/images/I/81tISKde7HL._SY355_.jpg", width: 40, height: 40, crop: :fill %>" class="avatar">
          <% end %>
        </div>
      </div>
      <div class="col-xs-8" class="no-purple">
        <h5><%= link_to checkin.user.user_name, profile_path(checkin.user), style: "color: #606470" %></h5>
        <h5><span style="font-weight: normal;">Checked in @ </span><%= link_to checkin.location.name, location_path(checkin.location), style: "color: #606470"%></h5>
      </div>
      <div class="col-xs-2">
        <div class="checkin-time">
         <h6> <%= checkin.created_at.strftime("%I:%M") %></h6>
       </div>
     </div>
     <% end %>
   </div>
   <% end %>


 </div>
